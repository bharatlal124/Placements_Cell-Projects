<!-- Update Student Form -->
<div class="layout-container">
    <form action="/updateStudent/<%= student._id %>" method="post" class="mt-4">
        <h1 class="form-heading">Update Student</h1>

        <div class="form-group">
            <label for="batch">Batch:</label>
            <select id="batch" name="batch" class="form-control" required>
                <% for (let year = 2010; year <= 2030; year++) { %>
                    <option value="<%= year %>" <%= student.batch === year.toString() ? 'selected' : '' %>><%= year %></option>
                <% } %>
            </select>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" value="<%= student.name %>" required>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= student.email %>" required>
                </div>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="college">College:</label>
                    <input type="text" id="college" name="college" class="form-control" value="<%= student.college %>" required>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="contactNo">Contact No:</label>
                    <input type="text" id="contactNo" name="contactNo" class="form-control" value="<%= student.contactNo %>" required>
                </div>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="dsaScore">DSA Score:</label>
                    <input type="text" id="dsaScore" name="dsaScore" class="form-control" value="<%= student.score.dsa %>" required>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="webDScore">WebD Score:</label>
                    <input type="text" id="webDScore" name="webDScore" class="form-control" value="<%= student.score.webD %>" required>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="reactScore">React Score:</label>
                    <input type="text" id="reactScore" name="reactScore" class="form-control" value="<%= student.score.react %>" required>
                </div>
            </div>
        </div>
        <hr>
        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
                <option value="placed" <%= student.status === 'Placed' ? 'selected' : '' %>>Placed</option>
                <option value="not placed" <%= student.status === 'Not placed' ? 'selected' : '' %>>Not Placed</option>
            </select>
        </div>
        <hr>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Update Student</button>
        </div>
    </form>
</div>
