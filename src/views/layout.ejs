<!-- Common Layout page for all views -->
<!DOCTYPE html>
<html lang="en"><head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
            crossorigin="anonymous">
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>

        <link rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
        <script src="https://kit.fontawesome.com/0b69d70df4.js"
            crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/CSS/style.css">

        <title>Placement Cell</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll"
                    style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active text-light"
                            aria-current="page" href="/">Placement Cell</a>
                    </li>
                    <% if (!locals.userEmail) { %>
                    <li class="nav-item">
                        <a class="nav-link text-light"
                            href="/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/login">Login</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/students">Student
                            List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light"
                            href="/scheduledInterviewList">Interview List</a>
                    </li>
                    <% } %>
                </ul>

                <div class="d-flex">
                    <ul
                        class="navbar-nav me-auto mb-2 mb-lg-0 navbar-nav-scroll"
                        style="--bs-scroll-height: 100px;">
                        <% if (locals.userEmail) { %>

                        <li class="nav-item">
                            <a class="nav-link text-light"
                                href="/downloadReport">Download Report</a>
                        </li>

                        <li class="nav-item ms-auto">
                            <a class="nav-link dropdown-toggle text-light"
                                href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Welcome <%= locals.userName %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark"
                                        href="/logout">Logout</a>
                                </li>
                            </ul>
                        </li>
                        \
                        <% } %>
                    </ul>
                </div>
            </div>

        </nav>

        <%- body %>
    </body>
</html>
